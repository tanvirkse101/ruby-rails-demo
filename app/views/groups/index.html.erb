<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">My Groups:</div>
            <div class="panel-body">
                <div class="list-group">
                    <% @joined.each do |group| %>
                        <%= link_to group_path(group), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                            <b><%= group.name %></b>
                            <span class="badge badge-primary badge-pill"><%= group.members.count %></span>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-warning">
            <div class="panel-heading">Open Groups</div>
            <div class="panel-body">
                <div class="list-group">
                    <% @notJoined.each do |group| %>
                        <%= link_to group_path(group), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                            <b><%= group.name %></b>
                            <span class="badge badge-primary badge-pill"><%= group.members.count %></span>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-danger">
            <div class="panel-heading">Create your own group</div>
            <div class="panel-body">
                <h4>Add and chat with the members!</h4>
            </div>
            <div class="panel-footer text-center">
                <a href="#" class="btn btn-primary">Create</a>
            </div>
        </div>
    </div>
</div>
