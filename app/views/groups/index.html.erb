<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">Joined Groups:</div>
            <div class="panel-body">
                <div class="list-group">
                  <% @joined.each do |group| %>
                    <%= link_to group_path(group), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                      <b><%= group.name %></b> <span class="text-danger text-right"><%= '( Admin )' if group.creator == current_user %></span>
                      <span class="badge badge-primary badge-pill"><%= group.members.count %></span>
                    <% end %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-warning">
            <div class="panel-heading">Open Groups</div>
            <div class="panel-body">
                <div class="list-group">
                    <% @notJoined.each do |group| %>
                        <%= link_to group_path(group), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                            <b><%= group.name %></b>
                            <span class="badge badge-primary badge-pill"><%= group.members.count %></span>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row text-center">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">Create Your own group</div>
            <div class="panel-body">
                <%= button_to "Create Group", "create-group", method: :get, class: "btn btn-primary btn-lg" =%>
            </div>
        </div>
    </div>
</div>

