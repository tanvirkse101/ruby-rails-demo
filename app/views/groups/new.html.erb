<% provide(:title, 'New Group') %>
<h1>Create your new group</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @group) do |f| %>
      <%= render 'shared/error_messages', object: @group %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Name of the group" %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control', placeholder: "Description of the group" %>
      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
