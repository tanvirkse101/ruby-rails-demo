
<div class="panel panel-primary">
    <div class="panel-heading text-center"><h3><%= @group.name =%></h3></div>
    <div class="panel-body">
        <h4>Members</h4>
        <% @group.members.each do |user| %>
        <%= link_to gravatar_for(user, size: 40), user %>
        <% end %>
    </div>
    <div class="panel-footer text-center">
        <%= link_to "Join", group_memberships_path(group_id: @group.id), method: :post, :class => "btn btn-lg btn-primary" %>
    </div>
</div>
