<% provide(:title, 'Manage members') %>
<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4">Group: <%= @group.name =%></h1>
  <p class="lead"><i>Admin: <%= @group.creator.name =%></i></p>
</div>
  <div class="row">
    <div class="col-md-12">
      <%= form_tag("/groups/#{params[:id]}/members", method: "get", class: "form-inline") do %>
        <div class="input-group">
          <input type="text" name="search" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <%= submit_tag "Search", class: "btn btn-default" %>
          </span>
        </div><!-- /input-group -->
      <% end %>
    </div>
</div>  
<div class="row">
    <div class="col-md-6">
        <h3>Members</h3>
        <hr>
        <% if @members.any? %>
        <ul class="users follow">
          <%= render partial: 'users/member', collection: @members %>
        </ul>
        <%= will_paginate @members, param_name: 'members_page' %>
        <% end %>
    </div>
    <div class="col-md-6">
      <h3>Non members</h3>
      <hr>
      <% if @non_members.any? %>
      <ul class="users follow">
        <%= render partial: 'users/nonmember', collection: @non_members %>
      </ul>
      <%= will_paginate @non_members, param_name: 'nonmembers_page' %>
      <% end %>
    </div>
</div>
